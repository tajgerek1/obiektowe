<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ListView x:Name="listView" Margin="0,0,0,62">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="id" DisplayMemberBinding="{Binding m_nID}" Width="50"/>
                    <GridViewColumn Header="Imię" DisplayMemberBinding="{Binding m_strName}" Width="150"/>
                    <GridViewColumn Header="Nazwisko" DisplayMemberBinding="{Binding m_strSname}" Width="150"/>
                    <GridViewColumn Header="Pesel" DisplayMemberBinding="{Binding m_nPesel}" Width="150"/>
                </GridView>
            </ListView.View>
        </ListView>
        <Button Content="dodaj" Margin="500,389,10,10" Click="Button_Click" HorizontalAlignment="Right" Width="62" Height="22" VerticalAlignment="Bottom"/>

    </Grid>
</Window>
